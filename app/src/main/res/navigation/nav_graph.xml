<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/onBoardingFragment">

    <fragment
        android:id="@+id/loaderFragment"
        android:name="com.home.cinema.presentation.ui.fragments.start.LoaderFragment"
        android:label="LoaderFragment"
        tools:layout="@layout/loader_fragment">
        <action
            android:id="@+id/action_loaderFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/enter_slide_from_left_to_right"
            app:exitAnim="@anim/exit_slide_from_right_to_left"
            app:popUpTo="@id/loaderFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.home.cinema.presentation.ui.fragments.start.OnboardingFragment"
        android:label="OnBoardingFragment">
        <action
            android:id="@+id/action_onBoardingFragment_to_loaderFragment"
            app:destination="@id/loaderFragment"
            app:enterAnim="@anim/enter_slide_from_left_to_right"
            app:exitAnim="@anim/exit_slide_from_right_to_left"
            app:popUpTo="@id/onBoardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.home.cinema.presentation.ui.fragments.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment" />
</navigation>